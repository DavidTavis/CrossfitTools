<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2a2b"
        android:weightSum="10"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <com.example.david.crossfittools.CustomView.CustomTextView
                    android:id="@+id/valueTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0 kg"
                    android:textColor="#ffffff"
                    android:textSize="56dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <com.example.david.crossfittools.CustomView.CustomTextViewHelveticaLight
                    android:id="@+id/valueBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/valueTop"
                    android:gravity="center"
                    android:text="0 lb"
                    android:textColor="#ffffff"
                    android:textSize="26dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <ImageButton
                android:id="@+id/convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2b2a2b"
                android:layout_gravity="center"
                android:src="@drawable/autorenew" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2">

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnOne"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:onClick="clickOne"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnTwo"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="2"
            android:onClick="clickTwo"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnThree"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="3"
            android:onClick="clickThree"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2">

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnFour"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="4"
            android:onClick="clickFour"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnFive"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="5"
            android:onClick="clickFive"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnSix"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="6"
            android:onClick="clickSix"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2">

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnSeven"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="7"
            android:onClick="clickSeven"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnEight"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="8"
            android:onClick="clickEight"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnNine"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="9"
            android:onClick="clickNine"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2">

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnZero"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="0"
            android:onClick="clickZero"/>

        <com.example.david.crossfittools.CustomView.CustomButton
            android:id="@+id/btnDot"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="."
            android:onClick="clickDot"/>

        <ImageButton
            android:id="@+id/btnBackSpace"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/backspace"
            android:background="@drawable/background_backspace"
            android:onClick="clickBackSpace"/>

    </LinearLayout>

</LinearLayout>